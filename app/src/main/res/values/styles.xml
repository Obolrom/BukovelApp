<resources>

    <style name="match_wrap_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_button" parent="match_wrap_layout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/sign_in</item>
    </style>

    <style name="sign_til" parent="match_wrap_layout">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="rating_bar_24dp" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/title_bar_tall</item>
    </style>

</resources>